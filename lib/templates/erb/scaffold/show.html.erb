<dl class="dl-horizontal">
<% attributes.reject(&:password_digest?).each do |attribute| -%>
 <% if attribute.name == 'name' -%> 
  <div style="color: blue" >
  <dt><strong><%= attribute.human_name %>:</strong></dt>
  <dd><%%= @<%= singular_table_name %>.<%= attribute.name %> %></dd>
</div>
 
<% else -%>
 <div  >
  <dt><strong><%= attribute.human_name %>:</strong></dt>
  <dd><%%= @<%= singular_table_name %>.<%= attribute.name %> %></dd>
</div>

 <% end -%> 
<% end -%>
</dl>
